<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTMTC"
            android:minWidth="600px"
            android:minHeight="400px"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="80px">

        <CheckBox
            android:text=" Keep log alive  "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cbKeepAlive"
            android:checked="false" />

        <ToggleButton
            android:text="Automatic scrool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btAutoScrool"
            android:checked="true"
            android:textOff="@string/DTM_no_scrool"
            android:textOn="@string/DTM_scrool" />

        <ToggleButton
            android:text="Decode Telemetry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btDecodeTm"
            android:checked="true"
            android:textOff="@string/DTM_no_decode"
            android:textOn="@string/DTM_decode" />

        <Button
            android:text="Clear console"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_TMTC_dialog_Clear"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>